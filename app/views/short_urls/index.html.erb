<p id="notice"><%= notice %></p>

<h1>Short Urls</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Original</th>
      <th>Converted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @short_urls.each do |short_url| %>
      <tr>
        <td><%= short_url.original %></td>
        <td><%= link_to short_url.converted, short_url.converted %></td>
        <td><%= link_to 'Show', short_url %></td>
        <td><%= link_to 'Edit', edit_short_url_path(short_url) %></td>
        <td><%= link_to 'Destroy', short_url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Short Url', new_short_url_path %>
